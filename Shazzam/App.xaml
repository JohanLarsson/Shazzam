<Application x:Class="Shazzam.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Shazzam.Controls">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Brushes.xaml" />
                <ResourceDictionary Source="/Resources/Menu.xaml" />
                <ResourceDictionary Source="/Resources/ComboBox.xaml" />
                <ResourceDictionary Source="/Resources/TabControl.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="ImageInsideBorder" TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="Background" Value="{DynamicResource ImageBorderBrush}" />
                <Setter Property="CornerRadius" Value="2,2,2,2" />
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Padding" Value="4" />
                <Setter Property="Margin" Value="4" />
            </Style>
            <Style x:Key="ImageOutsideBorder" TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="Background" Value="{DynamicResource ImageBorderBrush}" />
                <Setter Property="CornerRadius" Value="2,2,2,2" />
                <Setter Property="BorderThickness" Value="6" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />

                <Setter Property="Margin" Value="1" />
            </Style>

            <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="{x:Type TextBox}">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderBrush" Value="{StaticResource MediumBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Foreground" Value="{StaticResource MediumBrush}" />

                <Style.Triggers>
                    <MultiTrigger>
                        <MultiTrigger.Conditions>
                            <Condition Property="IsEnabled" Value="True" />
                            <Condition Property="IsMouseOver" Value="True" />
                        </MultiTrigger.Conditions>
                        <MultiTrigger.Setters>
                            <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
                        </MultiTrigger.Setters>
                    </MultiTrigger>

                    <Trigger Property="IsKeyboardFocused" Value="True">
                        <Setter Property="Foreground" Value="{StaticResource LightBrush}" />
                    </Trigger>

                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="FontStyle" Value="Oblique" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
