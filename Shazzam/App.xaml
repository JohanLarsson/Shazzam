<Application x:Class="Shazzam.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/BrushesRD.xaml" />
                <ResourceDictionary Source="/Resources/MenuRD.xaml" />
                <ResourceDictionary Source="/Resources/EditorRD.xaml" />
                <ResourceDictionary Source="/Resources/RegisterTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <Style x:Key="ImageInsideBorder" TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="Background" Value="{DynamicResource ImageBorderBrush}" />
                <Setter Property="CornerRadius" Value="2,2,2,2" />
                <Setter Property="BorderThickness" Value="2" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Padding" Value="4" />
                <Setter Property="Margin" Value="4" />
            </Style>
            <Style x:Key="ImageOutsideBorder" TargetType="{x:Type Border}">
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="Background" Value="{DynamicResource ImageBorderBrush}" />
                <Setter Property="CornerRadius" Value="2,2,2,2" />
                <Setter Property="BorderThickness" Value="6" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />

                <Setter Property="Margin" Value="1" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
